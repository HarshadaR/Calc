<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.sourabh.myapplication2.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="#85efca11"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="#ffffff"

                android:text="           "
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edittxt"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="#ffffff"
                android:text="            "
                android:textSize="20dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#4678"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:background="#44539be4">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:background="#44454749">

                        <Button
                            android:id="@+id/buttonclear"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="#ffffff"
                            android:gravity="center"

                            android:text="  C "
                            android:textSize="40dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:background="#44539be4">

                        <Button
                            android:id="@+id/button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="#f5eded"
                            android:gravity="center"

                            android:text="   (  )  "
                            android:textSize="40dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:background="#44192129">

                        <Button
                            android:id="@+id/buttonperc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="#ffffff"
                            android:gravity="center"

                            android:text="  % "
                            android:textSize="40dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:background="#440b79e9">

                        <Button
                            android:id="@+id/buttondivide"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="#f5eded"
                            android:gravity="center"

                            android:text="  / "
                            android:textSize="40dp" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:background="#4418416b">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:background="#44f5eca1">

                        <Button
                            android:id="@+id/button7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="#f5eded"
                            android:gravity="center"

                            android:text="  7 "
                            android:textSize="40dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:background="#44cee295">

                        <Button
                            android:id="@+id/button8"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="#ffffff"
                            android:gravity="center"

                            android:text="  8 "
                            android:textSize="40dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:background="#440b79e9">

                        <Button
                            android:id="@+id/button9"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="#f5eded"
                            android:gravity="center"

                            android:text="  9 "
                            android:textSize="40dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:background="#442b2d2e">

                        <Button
                            android:id="@+id/buttonmul"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="#ffffff"
                            android:gravity="center"

                            android:text="  * "
                            android:textSize="40dp" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:background="#44539be4">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:background="#44649305">

                        <Button
                            android:id="@+id/button4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="#ffffff"
                            android:gravity="center"

                            android:text="  4 "
                            android:textSize="40dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:background="#440b79e9">

                        <Button
                            android:id="@+id/button5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="#f5eded"
                            android:gravity="center"

                            android:text="  5 "
                            android:textSize="40dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:background="#44cb0be9">

                        <Button
                            android:id="@+id/button6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="#ffffff"
                            android:gravity="center"

                            android:text="  6 "
                            android:textSize="40dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:background="#440b79e9">

                        <Button
                            android:id="@+id/buttonsub"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="#f5eded"
                            android:gravity="center"

                            android:text="  - "
                            android:textSize="40dp" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:background="#44ec950a">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:background="#44f2c399">

                        <Button
                            android:id="@+id/button1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="#f5eded"
                            android:gravity="center"

                            android:text="  1 "
                            android:textSize="40dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:background="#ffffff">

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="#0fffffff"
                            android:gravity="center"

                            android:text="  2 "
                            android:textSize="40dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:background="#440b79e9">

                        <Button
                            android:id="@+id/button3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="#f5eded"
                            android:gravity="center"

                            android:text="  3 "
                            android:textSize="40dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:background="#44c6f2ea">

                        <Button
                            android:id="@+id/buttonplus"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="#ffffff"
                            android:gravity="center"

                            android:text="  + "
                            android:textSize="40dp" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:background="#44539be4">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:background="#ffffff">

                        <Button
                            android:id="@+id/buttondot"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="#0fffffff"
                            android:gravity="center"

                            android:text="  . "
                            android:textSize="40dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:background="#445aec5a">

                        <Button
                            android:id="@+id/button0"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="#f5eded"
                            android:gravity="center"

                            android:text="  0 "
                            android:textSize="40dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:background="#4408f463">

                        <Button
                            android:id="@+id/button18"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="#ffffff"
                            android:gravity="center"

                            android:text="  +/- "
                            android:textSize="40dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:background="#44eef3f9">

                        <Button
                            android:id="@+id/buttonequal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="#f5eded"
                            android:gravity="center"

                            android:text="  = "
                            android:textSize="40dp" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</layout>